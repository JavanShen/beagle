{
  "name": "beagle",
  "private": true,
  "version": "1.1.0",
  "type": "module",
  "scripts": {
    "dev:server": "pnpm --filter server dev",
    "dev:app": "pnpm --filter app dev",
    "dev:electron": "pnpm build:server && concurrently \"pnpm dev:app\" \"pnpm --filter electron dev\"",
    "dev": "concurrently \"pnpm dev:server\" \"pnpm dev:app\" \"pnpm dev:electron\"",
    "build:server": "pnpm --filter server build",
    "build:app": "pnpm --filter app build",
    "build:electron": "pnpm --filter electron build",
    "build": "pnpm build:server && pnpm build:app",
    "pack:electron": "pnpm build:app && pnpm --filter server build:standalone && pnpm --filter electron package",
    "lint": "eslint .",
    "preview:server": "pnpm --filter server preview",
    "preview": "pnpm build:app && pnpm preview:server",
    "test": "vitest",
    "version": "node scripts/sync-version.js"
  },
  "dependencies": {
    "axios": "^1.8.2",
    "bcryptjs": "^3.0.2",
    "dotenv": "^16.5.0",
    "framer-motion": "^12.4.10",
    "jsonwebtoken": "^9.0.2",
    "lodash-es": "^4.17.21",
    "mime": "^4.0.7",
    "music-metadata": "^11.6.1",
    "query-string": "^9.2.2",
    "webdav": "^5.8.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@tauri-apps/cli": "^2.4.1",
    "@types/connect-history-api-fallback": "^1.5.4",
    "@types/express": "^5.0.3",
    "@types/howler": "^2.2.12",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "concurrently": "^9.2.0",
    "cross-env": "^10.1.0",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "sequelize-cli": "^6.6.3",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.24.1",
    "vitest": "^3.0.9",
    "vite": "^6.2.0",
    "esbuild": "0.25.2",
    "globals": "^15.15.0"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "sqlite3"
    ],
    "onlyBuiltDependencies": [
      "electron",
      "sqlite3"
    ]
  }
}
